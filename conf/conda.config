conda {
  cacheDir = "${params.condaCacheDir}"
  createTimeout = '1 h'
}

process {

  beforeScript = "export R_LIBS_USER=\"-\"; export R_PROFILE_USER=\"-\"; export R_ENVIRON_USER=\"-\"; export PYTHONNOUSERSITE=1; export PATH=$PATH:${projectDir}/bin/fromSource"

  withLabel:ascat{ conda = "${projectDir}/environment.yml" }
  withLabel:bcftools{ conda = "${projectDir}/environment.yml" }
  withLabel:bedtools{ conda = "${projectDir}/environment.yml" }
  withLabel:bwa{ conda = "${projectDir}/environment.yml" }
  withLabel:facets{ conda = "${projectDir}/environment.yml" }
  withLabel:fastqc{ conda = "${projectDir}/environment.yml" }
  withLabel:gatk{ conda = "${projectDir}/environment.yml" }
  withLabel:identito{ conda = "${projectDir}/environment.yml" }
  withLabel:manta{ conda = "${projectDir}/environment.yml" }
  withLabel:mosdepth{ conda = "${projectDir}/environment.yml" }
  withLabel:multiqc{ conda = "${projectDir}/environment.yml" }
  withLabel:picard{ conda = "${projectDir}/environment.yml" }
  withLabel:preseq{ conda = "${projectDir}/environment.yml" }
  withLabel:python{ conda = "${projectDir}/environment.yml" }
  withLabel:sambamba{ conda = "${projectDir}/environment.yml" }
  withLabel:samtools{ conda = "${projectDir}/environment.yml" }
  withLabel:snpeff{ conda = "${projectDir}/environment.yml" }
  withLabel:tabix{ conda = "${projectDir}/environment.yml" }
  withLabel:transition{ conda = "${projectDir}/environment.yml" }
}
