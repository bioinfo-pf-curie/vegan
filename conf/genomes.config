/*
 * -------------------------------------------------
 *  Nextflow config file for Genomes paths
 * -------------------------------------------------
 * Defines reference genomes
 * Can be used by any config that customises the base
 * path using $params.genomeAnnotationPath / --genomeAnnotationPath
 */

params {
  genomes {
    'hg19_base' {
      acLoci                = "${params.genomeAnnotationPath}/pipelines/tmp/nf-vegan/hg19_base/1000G_phase3_20130502_SNP_maf0.3.loci"
      acLociGC              = "${params.genomeAnnotationPath}/pipelines/tmp/nf-vegan/hg19_base/1000G_phase3_20130502_SNP_maf0.3.loci.gc"
      bwaIndex              = "${params.genomeAnnotationPath}/pipelines/tmp/nf-vegan/hg19_base/hg19_base.fa.{amb,ann,bwt,pac,sa}"
      chrLength             = "${params.genomeAnnotationPath}/pipelines/Human/hg19_base/genome/chrom_hg19_base.sizes"
      dbsnp                 = "${params.genomeAnnotationPath}/pipelines/tmp/nf-vegan/hg19_base/dbsnp_138.hg19.vcf"
      dbsnpIndex            = "${params.genomeAnnotationPath}/pipelines/tmp/nf-vegan/hg19_base/dbsnp_138.hg19.vcf.idx"
      dict                  = "${params.genomeAnnotationPath}/pipelines/Human/hg19_base/genome/hg19_base.dict"
      fasta                 = "${params.genomeAnnotationPath}/pipelines/Human/hg19_base/genome/hg19_base.fa"
      fastaFai              = "${params.genomeAnnotationPath}/pipelines/Human/hg19_base/genome/hg19_base.fa.fai"
      germlineResource      = "${params.genomeAnnotationPath}/pipelines/tmp/nf-vegan/hg19_base/af-only-gnomad_modified.raw.sites.vcf"
      germlineResourceIndex = "${params.genomeAnnotationPath}/pipelines/tmp/nf-vegan/hg19_base/af-only-gnomad_modified.raw.sites.vcf.idx"
      intervals             = "${params.genomeAnnotationPath}/pipelines/tmp/nf-vegan/hg19_base/wgs_calling_regions.grch37.list.txt"
      knownIndels           = "${params.genomeAnnotationPath}/Human/dbsnp/{1000G_phase1,Mills_and_1000G_gold_standard}.indels.hg19.vcf"
      knownIndelsIndex      = "${params.genomeAnnotationPath}/Human/dbsnp/{1000G_phase1,Mills_and_1000G_gold_standard}.indels.hg19.vcf.idx"
      snpeffDb              = "hg19"
    }
    'hg38_base' {
      acLoci                = "${params.genomeAnnotationPath}/tmp/Human/GRCh38/1000G_phase3_GRCh38_maf0.3.loci"
      acLociGC              = "${params.genomeAnnotationPath}/tmp/Human/GRCh38/1000G_phase3_GRCh38_maf0.3.loci.gc"
      bwaIndex              = "${params.genomeAnnotationPath}/Human/hg38_base/indexes/bwa/hg38_base.{amb,ann,bwt,pac,sa}"
      chrLength             = "${params.genomeAnnotationPath}/Human/hg38_base/genome/chrom_hg38_base.sizes"
      dbsnp                 = "${params.genomeAnnotationPath}/Human/hg38/tool_databases/nf_sarek/dbsnp_146.hg38.vcf.gz.tbi"
      dbsnpIndex            = "${params.genomeAnnotationPath}/Human/hg38/tool_databases/nf_sarek/dbsnp_146.hg38.vcf.gz.tbi"
      dict                  = "${params.genomeAnnotationPath}/Human/hg38_base/genome/hg38_base.dict"
      fasta                 = "${params.genomeAnnotationPath}/Human/hg38_base/genome/hg38_base.fa"
      fastaFai              = "${params.genomeAnnotationPath}/Human/hg38_base/genome/hg38_base.fa.fai"
      germlineResource      = "${params.genomeAnnotationPath}/tmp/Human/GRCh38/af-only-gnomad.hg38.vcf.gz"
      germlineResourceIndex = "${params.genomeAnnotationPath}/tmp/Human/GRCh38/af-only-gnomad.hg38.vcf.gz.tbi"
      intervals             = "${params.genomeAnnotationPath}/Human/hg38/tool_databases/nf_sarek/wgs_calling_regions.hg38.bed"
      knownIndels           = "${params.genomeAnnotationPath}/Human/hg38/tool_databases/nf_sarek/{Mills_and_1000G_gold_standard.indels.hg38,beta/Homo_sapiens_assembly38.known_indels}.vcf.gz"
      knownIndelsIndex      = "${params.genomeAnnotationPath}/Human/hg38/tool_databases/nf_sarek/{Mills_and_1000G_gold_standard.indels.hg38,beta/Homo_sapiens_assembly38.known_indels}.vcf.gz.tbi"
      snpeffDb              = "GRCh38.92"
    }
    'GRCh38' {
      acLoci                = "/data/annotations/pipelines/tmp/Human/GRCh38/1000G_phase3_GRCh38_maf0.3.loci"
      acLociGC              = "/data/annotations/pipelines/tmp/Human/GRCh38/1000G_phase3_GRCh38_maf0.3.loci.gc"
      bwaIndex              = "${params.genomeAnnotationPath}/hg38_base.fa.{amb,ann,bwt,pac,sa}"
      chrLength             = "${params.genomeAnnotationPath}/resources_broad_hg38_v0_Homo_sapiens_assembly38.len"
      dbsnp                 = "${params.genomeAnnotationPath}/dbsnp_146.hg38.vcf.gz"
      dbsnpIndex            = "${params.genomeAnnotationPath}/dbsnp_146.hg38.vcf.gz.tbi"
      dict                  = "${params.genomeAnnotationPath}/hg38_base.dict"
      fasta                 = "${params.genomeAnnotationPath}/hg38_base.fa"
      fastaFai              = "${params.genomeAnnotationPath}/hg38_base.fa.fai"
      germlineResource      = "${params.genomeAnnotationPath}/af-only-gnomad.hg38.vcf.gz"
      germlineResourceIndex = "${params.genomeAnnotationPath}/af-only-gnomad.hg38.vcf.gz.tbi"
      intervals             = "${params.genomeAnnotationPath}/wgs_calling_regions.hg38.bed"
      knownIndels           = "${params.genomeAnnotationPath}/{Mills_and_1000G_gold_standard.indels.hg38,beta/Homo_sapiens_assembly38.known_indels}.vcf.gz"
      knownIndelsIndex      = "${params.genomeAnnotationPath}/{Mills_and_1000G_gold_standard.indels.hg38,beta/Homo_sapiens_assembly38.known_indels}.vcf.gz.tbi"
      snpeffDb              = "GRCh38.86"
    }
    'smallGRCh37' {
      acLoci                = "${params.genomeAnnotationPath}/1000G_phase3_20130502_SNP_maf0.3.small.loci"
      acLociGC              = "${params.genomeAnnotationPath}/1000G_phase3_20130502_SNP_maf0.3.small.loci.gc"
      dbsnp                 = "${params.genomeAnnotationPath}/dbsnp_138.b37.small.vcf.gz"
      fasta                 = "${params.genomeAnnotationPath}/human_g1k_v37_decoy.small.fasta"
      germlineResource      = "${params.genomeAnnotationPath}/dbsnp_138.b37.small.vcf.gz"
      intervals             = "${params.genomeAnnotationPath}/small.intervals"
      knownIndels           = ["${params.genomeAnnotationPath}/1000G_phase1.indels.b37.small.vcf.gz", "${params.genomeAnnotationPath}/Mills_and_1000G_gold_standard.indels.b37.small.vcf.gz"]
      snpeffDb              = "GRCh37.75"
    }
  }
}
