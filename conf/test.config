/*
 * -------------------------------------------------
 *  Nextflow config file for running tests
 * -------------------------------------------------
 * Defines bundled input files and everything required
 * to run a fast and simple test. Use as follows:
 *   nextflow run main.nf -profile test --genomeAnnotationPath /path/to/annotations
 */

params {

  config_profile_name = 'EUCANCAN/vegan test data'
  configProfileDescription = 'Minimal test dataset to check pipeline functions'

  // Limit resources so that this can run
  maxCpus = 4
  maxMemory = 8.GB
  maxTime = 48.h

  // Input data - Sample Plan
  // test Mutect2, HaplotypeCaller and classical processes
  //samplePlan = "${projectDir}/test/csv/hpc-bench-wgs-13x.sub.csv"
  // Bigger dataset to test Manta (otherwise crash because not enough reads)
  //samplePlan = "${projectDir}/test/csv/hpc-bench-wgs-13x.csv"
  //samplePlan = "${projectDir}/test/csv/hpc-bench-wgs-13x_ubam.csv"
  //design = "${projectDir}/test/csv/hpc-bench-wgs-13x-design.csv"

  // new test dataset:
  samplePlan = "${projectDir}/test/csv/exoBench_22k.splan.csv"
  //samplePlan = "${projectDir}/test/csv/exoBench_22k_bam.splan.csv"
  //samplePlan = "${projectDir}/test/csv/exoBench_500k.splan.csv"
  //samplePlan = "${projectDir}/test/csv/exoBench_1M.splan.csv"
  //samplePlan = "${projectDir}/test/csv/exoBench_5M.splan.csv"
  //samplePlan = "${projectDir}/test/csv/exoBench_10M.splan.csv"

  design = "${projectDir}/test/csv/exoBench.design.csv"

  //readPaths = [
  //  ['SRR7890912', ["$projectDir/test/data/SRP162370/WGS_NV_N_2/13X/SRR7890912_1.fastq.gz", "$projectDir/test/data/SRP162370/WGS_NV_N_2/13X/SRR7890912_2.fastq.gz"]],
  //  ['SRR7890916', ["$projectDir/test/data/SRP162370/WGS_NV_T_2/13X/SRR7890916_1.fastq.gz", "$projectDir/test/data/SRP162370/WGS_NV_T_2/13X/SRR7890916_2.fastq.gz"]],
  //]

  //reads = "$projectDir/test/data/SRP162370/*/13X/SRR*_{1,2}.fastq.gz"

  // Annotations
  genome =  'hg19'

  //Step
  step =  'mapping' // 'filtering', 'calling'

  // Tools
  tools = 'mutect2,snpeff,haplotypecaller,manta,tmb' // ,msisensor,facets,ascat'

  // Target
  targetBed = "${projectDir}/test/target/test_vegan.bed"
  //targetBed = "${projectDir}/test/target/TargetRegions.bed"
  //targetBED = "${projectDir}/test/target/Target_bed_lifted_hg38.sort.bed"
}
